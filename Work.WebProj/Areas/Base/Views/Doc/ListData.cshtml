@model  IEnumerable<DotWeb.Areas.Base.Controllers.DocInfo>

@using DotWeb.Areas.Base.Controllers;
@{
    Layout = "~/Views/Shared/Manage/RLayout.cshtml";
    ViewBag.MenuName = "系統設定";
    ViewBag.Caption = "系統操作教學";
}

@section IncludeScript{
    @Html.Partial("Manage/JSGlobalVar")
    <script src="~/Scripts/build/comminc.js"></script>
}
@section sidebar{
    @Html.Partial("Manage/vucMenu")
}
<ul class="breadcrumb">
    <li><i class="fa-caret-right"></i> @ViewBag.MenuName</li>
    <li><i class="fa-angle-right"></i> @ViewBag.Caption</li>
</ul>

<h3 class="h3">
    <span>系統操作教學</span>
</h3>

