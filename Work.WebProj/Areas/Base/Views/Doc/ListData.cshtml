<ul class="list-group">
    @foreach (DocInfo doc in Model)
    {
        <li>
            <a class="list-group-item" href="@doc.Link" target="new">
                <strong class="text-primary">@doc.Sort.</strong>
                <span>@doc.Memo</span>
            </a>
        </li>
    }
</ul>
